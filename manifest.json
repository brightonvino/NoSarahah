{
  "manifest_version": 2,
  "name": "No Sarahah",
  "description": "This extension hides Sarahah posts on Facebook Feeds",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": [
        "lib/jquery.js",
        "lib/vibrant.js",
        "lib/color-thief.js",
        "lib/mutation.js",
        "lib/resemble.js",
        "script.js"
      ],
      "matches": [
        "https://www.facebook.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "info.html",
    "default_title": "No Sarahah"
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "https://*/"
    
  ]
}